{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "LF",
    "strict": true,

    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,

    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "paths": {
      "compiler/*": ["src/compiler/*"],
      "v3": ["src/v3/index"],
      "v3/*": ["src/v3/*"],
      "types/*": ["src/types/*"],
      "utils": ["src/utils"],
      "instance/*": ["src/instance/*"],
      "vdom/*": ["src/vdom/*"]
    }
  },
  "include": ["src", "packages/*/src"]
}
